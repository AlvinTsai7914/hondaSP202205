@using HTW.Frontend.Infrastructure.Extension
@model HTW.CommonData.ViewModel.StringViewModel
@{
    Layout = null;
    string v = DateTime.Now.ToString("HHmmss");
}

<!DOCTYPE html>
<html lang="zh-Hant-TW">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
    <!-- IE -->
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- 取消 safari 電話連結 -->
    <meta name="format-detection" content="telephone=no">
    <title>好車停不停 | 遊戲頁</title>

    <!-- facebook share -->
    <meta property="og:url" content="https://www.honda-taiwan.com.tw/SP/202205/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Honda 好車停不停" />
    <meta property="og:description" content="購車週週抽1年份停車位，入主CR-V再享3大好康送不停！" />
    <meta property="og:image" content="~/SP/2022_05/img/share.jpg" />

    <!-- favicon.ico -->
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.ico" />
    <link rel="Bookmark" href="~/images/favicon.ico">

    <!-- header的 Css -->
    <link rel="stylesheet" href="~/Content/bootstrap-custom.css?v=@(v)">
    <link rel="stylesheet" href="~/Content/main.css?v=@(v)">
    <link rel="stylesheet" href="~/Content/style.css?v=@(v)">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css?v=@(v)" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Content/new_headerfooter.css?v=@(v)">

    <!-- 本頁的 Css -->
    <link rel="stylesheet" type="text/css" media="all" href="~/SP/2022_05/css/style.css?v=@(v)" />

    <style>
        .qrcode .container img {
            width: 300px;
            height: 300px;
        }
    </style>
</head>

<body>

    <!-- wrapper start -->
    <div class="wrapper" id="capture">
        <!-- header start -->
        @{ Html.RenderAction("Header", "Home"); }
        <!-- header end -->
        <!-- 主要內容 start -->
        <main class="page_prize" style="padding-top: 60px; min-height: 100vh;">

            <div class="banner">
                <img src="~/SP/2022_05/img/bingo_banner.png" alt="" style="width: 100%">
            </div>
            <div class="container">
                <div class="onehour">
                    <h1 style="font-size: 28px;">嘟嘟房免費停車一小時使用</h1>
                    <div class="img_box">
                        @Html.GenerateRelayQrCode(Model.StringValue, 300, 300)
                    </div>
                    <h1>使用方式</h1>
                    <p>嘟嘟房1小時停車券QRCode」於時操作機台選擇『折扣券』付費方式，掃描QRCode即可折抵1小時停車費，本券適用全台嘟嘟房停車場使用(礙於停車場設備版本及停車場偶有增減之情況，適用之停車場依<a href="https://www.dodohome.com.tw/" target="_blank" rel="noreferrer noopener">嘟嘟房官網</a>為主)。</p>
                </div>
            </div>
        </main>
        <!-- 主要內容 end -->
    </div>
    <!-- wrapper end -->
    <!-- jquery -->
    <script src="~/SP/2022_05/js/jquery-3.6.0.min.js?v=@(v)"></script>
    <!-- bootstrap -->
    <script src="~/SP/2022_05/js/bootstrap-4.6.1.min.js?v=@(v)"></script>

    <!-- header的 Js -->
    <script src="~/scripts/lib/slick.min.js?v=@(v)"></script>
    <script src="~/Scripts/lib/iscroll.js?v=@(v)"></script>
    <script src="~/Scripts/main.js?v=@(v)"></script>

    <!-- 共用js -->
    <script src="~/SP/2022_05/js/common.js?v=@(v)"></script>

    @if (TempData.ContainsKey("alert"))
    {
        <script>
            alert('@TempData["alert"]');
        </script>
    }
</body>

</html>